<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Registro</h1>
        </div>
        <div class="card-body"></div>
        <div class="card-footer">
            <form action="/new-game" method="POST">
                <div class="form-group">
                    <label for="one"> Player One</label>
                    <input id="one" type="text" name="namePlayerOne" placeholder="Name player one" class="form-control" autofocus required>
                </div>
                <div class="form-group">
                    <label for="two"> Player Two</label>
                    <input id="two" type="text" name="namePlayerTwo" placeholder="Name player two" class="form-control" required>
                </div>
                <div class="btn-container">
                    <button class="btn btn-success">
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
