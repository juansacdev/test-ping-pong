<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Ping Pong Traker</h1>
        </div>
        <div class="card-body"></div>
        <div class="card-footer">
            <div>
                <div class="form-group">
                    {{#if data}}
                        {{#data}}
                            <div class="info-players" data-id="{{this._id}}">
                                <h3 class="name-player-{{this.numberPlayer}}" data-id="{{this._id}}">
                                    {{this.name}}
                                </h3>
                                <p class="wins">
                                    Wins:
                                    <span id="wins-player-{{this.numberPlayer}}" data-id="{{this._id}}">
                                        {{this.wins}}
                                    </span>
                                </p>
                                <button class="add-win-to-player btn btn-success"
                                    data-id={{this._id}}
                                >
                                    Add win
                                </button>
                            </div>
                        {{/data}}
                    {{else}}
                    <h3>No hay jugadores D:</h3>
                    {{/if}}
                </div>
                <hr>
                <div class="container-data-winner">
                    <h4 >Current winner:</h4>
                    <p id="current-winner">Â¡Play!</p>
                    <h4 >Win diference:</h4>
                    <p id="win-dif">0</p>
                </div>
                <div class="btn-container">
                    <button class="btn btn-primary" id="saveGame">
                        Save Game
                    </button>
                    <a href="/dashboard" class="btn btn-outline-primary" >
                        Dashboard
                    </a>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>
